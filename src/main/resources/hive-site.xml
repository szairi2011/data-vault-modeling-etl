<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!-- 
  Hive Metastore Configuration for Apache Iceberg
  This configuration uses Derby embedded database for local development
  In production, use MySQL or PostgreSQL for the metastore
-->
<configuration>
    <!-- Derby embedded database for local development (relative to project root) -->
    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:derby:directory:./warehouse/metastore_db;create=true</value>
        <description>Embedded Derby metastore stored under warehouse/metastore_db (relative path)</description>
    </property>
    
    <property>
        <name>javax.jdo.option.ConnectionDriverName</name>
        <value>org.apache.derby.jdbc.EmbeddedDriver</value>
        <description>JDBC driver class</description>
    </property>
    
    <!-- Warehouse location - where Iceberg tables are stored -->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>file:///C:/dev/projects/data-vault-modeling-etl/warehouse</value>
        <description>Local file system path for data warehouse</description>
    </property>
    
    <!-- Schema verification - disable for local development -->
    <property>
        <name>hive.metastore.schema.verification</name>
        <value>false</value>
    </property>
    
    <!-- Auto-create schema -->
    <property>
        <name>datanucleus.schema.autoCreateAll</name>
        <value>true</value>
    </property>
    <property>
        <name>datanucleus.autoCreateSchema</name>
        <value>true</value>
    </property>

    <!-- Run HMS embedded (no remote Thrift URIs) -->
    <property>
        <name>hive.metastore.uris</name>
        <value></value>
        <description>Empty => embedded metastore in the Spark JVM</description>
    </property>

    <!-- IMPORTANT: Disable Hive ACID/locking to avoid HIVE_LOCKS requirement in local Derby -->
    <property>
        <name>hive.support.concurrency</name>
        <value>false</value>
    </property>
    <property>
        <name>hive.txn.manager</name>
        <value>org.apache.hadoop.hive.ql.lockmgr.DummyTxnManager</value>
    </property>
    <property>
        <name>hive.compactor.initiator.on</name>
        <value>false</value>
    </property>
    <property>
        <name>hive.compactor.worker.threads</name>
        <value>0</value>
    </property>

    <!-- Optional: avoid direct SQL self-test against DBS on first bootstrap -->
    <property>
        <name>metastore.try.direct.sql</name>
        <value>false</value>
    </property>
</configuration>
